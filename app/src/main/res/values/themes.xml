<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Kedarnath" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/appcolor</item>
        <item name="colorPrimaryVariant">@color/appcolorlight</item>
        <item name="colorOnPrimary">@color/appcolor</item>
        <item name="buttonStyle">@style/Button.Primary</item>
        <item name="fontFamily">@font/segoepr</item>
    </style>
    <style name="Button.Primary" parent="Widget.AppCompat.Button.Colored">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">#fff</item>
        <item name="backgroundTint">@color/red</item>
    </style>


    <style name="fulldialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="fontFamily">@font/segoepr</item>

    </style>
    <style name="Theme.Kedarnath" parent="Base.Theme.Kedarnath" />
</resources>