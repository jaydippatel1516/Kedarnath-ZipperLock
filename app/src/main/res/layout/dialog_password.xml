<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_centerInParent="true"
        android:background="@drawable/edt_bg"
        android:gravity="center"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp">

        <RelativeLayout
            android:id="@+id/enter_pass_1_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_40sdp">

            <EditText
                android:id="@+id/password_edit_1"
                android:layout_width="@dimen/_76sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_bg"
                android:digits="0123456789"
                android:gravity="center"
                android:inputType="none|number|numberSigned|numberPassword"
                android:maxLength="4"
                android:selectAllOnFocus="true"
                android:textColor="@color/dialog_enter_password_edit_color"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/dialog_enter_password_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/password_edit_1"
                android:layout_alignBottom="@+id/password_edit_1"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_toLeftOf="@+id/password_edit_1"
                android:gravity="center_vertical"
                android:text="Enter Password:"
                android:textColor="@color/dialog_enter_password_text_color"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/enter_pass_2_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_pass_1_holder"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_40sdp">

            <EditText
                android:id="@+id/password_edit_2"
                android:layout_width="@dimen/_76sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_bg"
                android:digits="0123456789"
                android:gravity="center"
                android:inputType="none|number|numberSigned|numberPassword"
                android:maxLength="4"
                android:selectAllOnFocus="true"
                android:textColor="@color/dialog_reenter_password_edit_color"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/dialog_reenter_password_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/password_edit_2"
                android:layout_alignBottom="@+id/password_edit_2"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_toLeftOf="@+id/password_edit_2"
                android:gravity="center_vertical"
                android:text="Reenter Password:"
                android:textColor="@color/dialog_reenter_password_text_color"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/dialog_password_ok_btn"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_below="@+id/enter_pass_2_holder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/save_" />

        <ImageView
            android:id="@+id/password_visibility_btn"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_22sdp"
            android:layout_marginRight="@dimen/_10sdp"
            app:srcCompat="@drawable/btn_see" />
    </RelativeLayout>
</RelativeLayout>
