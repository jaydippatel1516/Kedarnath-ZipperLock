<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_" />

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/btn_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kedarnath "
                android:textColor="@color/pinklight"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cusomize"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/gift"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_8sdp"
            android:src="@drawable/gift" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_margin="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_110sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/set_bg_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/set_background_" />

                <ImageView
                    android:id="@+id/set_wallpaper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone"
                    android:src="@drawable/set_wallpaper_" />
                <ImageView
                    android:id="@+id/set_zipper_color_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/set_zipper_type_" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_110sdp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/set_pendant_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/set_pendant_type_" />
                <!--                android:id="@+id/set_zipper_color_btn"-->

                <ImageView
                    android:visibility="invisible`"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/set_zipper_type_" />


            </LinearLayout>


            <ImageView
                android:id="@+id/set_date_and_time_btn"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/set_lock_screen_details_" />

            <ImageView
                android:id="@+id/preview_btn"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/preview_lock_screen_" />

            <RelativeLayout
                android:id="@+id/set_zipper_position_btn"
                android:layout_width="@dimen/_210sdp"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/switch_left">

                <TextView
                    android:id="@+id/txtVertical"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:gravity="center"
                    android:text="@string/vertical_position"
                    android:textColor="@color/set_vertical_text_color"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/txtHorizontal"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:gravity="center"
                    android:text="@string/horizontal_position"
                    android:textColor="@color/set_horizontal_text_color"
                    android:textSize="@dimen/_14sdp" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp">

                <FrameLayout
                    android:id="@+id/ad_native"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_240sdp" />
            </FrameLayout>

            <ImageView
                android:id="@+id/customize_done_btn"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_8sdp"
                android:src="@drawable/done_btn" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>