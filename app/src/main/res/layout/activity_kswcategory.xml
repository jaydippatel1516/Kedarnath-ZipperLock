<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_" />

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/btn_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kedarnath "
                android:textColor="@color/pinklight"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallpaper Category"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/gift"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_8sdp"
            android:src="@drawable/gift" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hd4k"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/hd_4k_wallpaper" />

            <ImageView
                android:id="@+id/daily"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/daily_wallpaper" />

            <FrameLayout
                android:id="@+id/adlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/ad_mininative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <ImageView
                android:id="@+id/top"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/top_wallpaper" />

            <ImageView
                android:id="@+id/classic"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/classic_wallpaper" />

            <ImageView
                android:id="@+id/unique"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/unique_wallpaper" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>